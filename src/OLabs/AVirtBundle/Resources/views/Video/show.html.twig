{% extends 'AVirtBundle::layout.html.twig' %}

{% block center -%}
    <h1>Video</h1>

    <div id="example">
        [{{ entity.type }}={{ entity.url }}]
    </div>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('video', { 'course_id': course.id }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('video_edit', { 'course_id': course.id, 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('video_delete', { 'course_id': course.id, 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}

{% extends 'AVirtBundle::modalLayout.html.twig' %}

{% block title %}
    Editar video
{% endblock title %}

{% block center -%}

    <form action="{{ path('video_update', { 'course_id': entity.course.id ,'id': entity.id}) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}
        <p>
            <button class="btn btn-primary" type="submit">Editar</button>
        </p>
    </form>
    <form action="{{ path('video_delete', { 'course_id': entity.course , 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE" />
        {{ form_widget(delete_form) }}
    <button class="btn btn-danger" type="submit">Delete</button>
    </form>
{% endblock center %}
